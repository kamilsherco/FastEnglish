<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/canvas" >
<LinearLayout
    
  
      android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        
        android:gravity="center"
        android:orientation="vertical"
  >
    
    

<TextView
        android:id="@+id/tvQuizPointsWin"
     	android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
      
        android:textAppearance="?android:attr/textAppearanceLarge" />
    

    <TextView
        android:id="@+id/tvQuizWord"
     	android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
        android:text="słowo do tłumaczenia"
        android:textAppearance="?android:attr/textAppearanceLarge" />

   
    <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <ImageView
       android:id="@+id/iQuizAnswerA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_gravity="center"
        android:src="@drawable/btshowtranslate" />

    <TextView
      android:id="@+id/iQuizAnswerAtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</FrameLayout>

   
     <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iQuizAnswerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_gravity="center"
        android:src="@drawable/btshowtranslate" />

    <TextView
        android:id="@+id/iQuizAnswerBtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</FrameLayout>

   
    


   
     <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
       android:id="@+id/iQuizAnswerC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_gravity="center"
       android:src="@drawable/btshowtranslate"  />

    <TextView
         android:id="@+id/iQuizAnswerCtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</FrameLayout>

    
      <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
     android:id="@+id/iQuizAnswerD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
    android:gravity="center"
    android:layout_gravity="center"
        android:src="@drawable/btshowtranslate" 
         />

    <TextView
         android:id="@+id/iQuizAnswerDtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</FrameLayout>
</LinearLayout>



   <FrameLayout
      
     android:layout_width="match_parent"
    android:layout_height="33dp"
     android:background="@drawable/bottom"
     android:layout_alignParentBottom="true"
      
    >


      

        <TextView
            android:id="@+id/tvQuizPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
        
            android:text="Punkty do zdobycia: 20 "
            android:textAppearance="?android:attr/textAppearanceLarge" />

     

    </FrameLayout>
     
    
    
   
  <ImageView
       android:id="@+id/iSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"
        android:src="@drawable/sound_mute" />



 




</RelativeLayout>

