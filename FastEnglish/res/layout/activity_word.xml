<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/canvas" >
    
     <LinearLayout 
     	android:id="@+id/lAddsWord"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
     	android:gravity="center"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    </LinearLayout>
    
<LinearLayout 
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
     
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txWordText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />



 <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
         android:id="@+id/iShowWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        
        android:layout_marginTop="5dp"
      
          android:src="@drawable/btshowtranslate" />

    <TextView
       android:id="@+id/iShowWordtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pokaż tłumaczenie"
        />

</FrameLayout>

<TextView
    android:id="@+id/txAnswer"
    
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text=""
    android:textAppearance="?android:attr/textAppearanceLarge" />

<TextView
	android:id="@+id/txIsAnswerKnownText"
	android:visibility="gone"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:textColor="#ffffff" 
	android:text="Czy znaleś odpowiedź?"
	android:layout_marginTop="5dp"
	/>






        
 <LinearLayout
android:id="@+id/llayout"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:layout_gravity="center"
android:layout_marginTop="5dp"
 android:orientation="horizontal"
android:weightSum="6">
   

  
    
     <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3">

    <ImageView
          android:id="@+id/iYes"
          android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
      android:textAppearance="?android:attr/textAppearanceLarge"
          android:src="@drawable/btyes"  />

    <TextView
       android:id="@+id/iYestxt"
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tak"
        />

</FrameLayout>
    
     <FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3">

    <ImageView
             android:id="@+id/iNo"
             android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
      
         android:src="@drawable/btno" />

    <TextView
        android:id="@+id/iNotxt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nie"
        />

</FrameLayout>
     

    </LinearLayout>


</LinearLayout>
 <FrameLayout
      
     android:layout_width="match_parent"
    android:layout_height="33dp"
     android:background="@drawable/bottom"
     android:layout_alignParentBottom="true"
      
    >



    </FrameLayout>
     
    
    
   
  <ImageView
       android:id="@+id/iSoundWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"
        android:src="@drawable/sound_mute" />

</RelativeLayout>
