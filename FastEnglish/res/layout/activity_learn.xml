<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/black"
    android:orientation="vertical" >

<ImageView
        android:id="@+id/iReplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/btreplay" />
<LinearLayout
    android:orientation="horizontal"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginTop="5dp"
     android:weightSum="6"
     >
     
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4" 
        android:text="Znznych słów z wybranych ketegorii: " />

    <TextView
        android:id="@+id/tvLeanrCountWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" 
        android:text="TextView" />
    
</LinearLayout>

<ImageView
        android:id="@+id/iLearnNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/btlearnnew" />



<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="6">
          
  
<TextView

	android:id="@+id/widget39"
	android:layout_width="0dp"
	android:layout_weight="3"
	android:layout_height="wrap_content"
	android:text="Liczba nowych s&#322;&#243;w:"
	android:layout_marginTop="5dp"
	/>
    <EditText
	android:id="@+id/edLearnNewWords"
	android:layout_width="0dp"
	android:layout_height="wrap_content"
	android:layout_weight="3"
	android:text="30"
	android:layout_marginTop="5dp"
	android:inputType="number"
	 />

        </LinearLayout>

<ImageView
        android:id="@+id/iPolEng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/btengpol" />
<LinearLayout
    android:orientation="horizontal"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginTop="5dp"
     android:weightSum="6"
     >
     
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4" 
        android:text="Wybrane kategorie: " />

    <TextView
        android:id="@+id/tvLearnCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" 
        android:text="TextView" />
    
</LinearLayout>
<ImageView
        android:id="@+id/iChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/btchange" />
</LinearLayout>
